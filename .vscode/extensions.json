{
	// See https://go.microsoft.com/fwlink/?LinkId=827846 to learn about workspace recommendations.
	// Extension identifier format: ${publisher}.${name}. Example: vscode.csharp

	// List of extensions which should be recommended for users of this workspace.
	"recommendations": [
		// This is a simple extension that automatically closes also custom tags
		"formulahendry.auto-close-tag",
		// Allows for quick formatting of Zettlr-generated JSON-files
		"hookyqr.beautify",
		// Makes it easy to write semantic commit messages
		"adam-bender.commit-message-editor",
		// Activates ESLint for JavaScript and TypeScript files
		"dbaeumer.vscode-eslint",
		// Makes editing the Markdown files much easier (i.e. the README, the
		// CHANGELOG or any of the testing files)
		"yzhang.markdown-all-in-one",
		// Can quickly re-format code according to JSStandard
		"esbenp.prettier-vscode",
		// Helpful when editing or quickly previewing any of the SVG files in the
		// repository
		"jock.svg",
		// After some quick configuration, this highlights TODO, NOTE, DEBUG, and BUG
		// messages that are everywhere within this codebase.
		// Recommended keyword configuration for Zettlr:
		// "todohighlight.keywords": [ "DEBUG", "TODO", "NOTE", "BUG" ]
		"wayou.vscode-todo-highlight",
		// Enables ESLint for TypeScript (TSLint)
		"ms-vscode.vscode-typescript-tslint-plugin",
		// Vue.js tooling -- previously, we recommended Vetur, but since that had
		// issues with TypeScript we switched to Volar (which is recommended by the
		// Vue team)
		"johnsoncodehk.volar",
		// Makes documenting code much easier
		"jeremyljackson.vs-docblock",
		// Useful snippets for the Vue components in this codebase.
		"hollowtree.vue-snippets"
	],
	// List of extensions recommended by VS Code that should not be recommended for users of this workspace.
	"unwantedRecommendations": [
		
	]
}
