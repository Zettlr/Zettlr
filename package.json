        "chart.js": "^2.9.3",
        "chokidar": "^3.3.1",
        "citeproc": "^2.2.33",
        "codemirror": "^5.52.0",
        "command-exists": "^1.2.7",
        "got": "^10.6.0",
        "joplin-turndown": "^4.0.24",
        "joplin-turndown-plugin-gfm": "^1.0.12",
        "jquery": "^3.4.1",
        "katex": "^0.11.1",
        "md5": "^2.2.1",
        "mermaid": "^8.4.8",
        "moment": "^2.24.0",
        "nspell": "^2.1.1",
        "on-change": "^1.8.1",
        "rimraf": "^3.0.2",
        "sanitize-filename": "^1.6.3",
        "semver": "^7.1.3",
        "showdown": "^1.9.1",
        "tippy.js": "^6.0.3",
        "uuid": "^7.0.2",
        "v8-compile-cache": "^2.1.0",
        "vue": "^2.6.11",
        "vuex": "^3.1.3",
        "yaml": "^1.8.2"
    },
    "devDependencies": {
        "chalk": "^3.0.0",
        "cross-env": "^7.0.2",
        "css-loader": "^3.4.2",
        "csso": "^4.0.2",
        "electron": "^8.1.1",
        "electron-builder": "^22.4.1",
        "electron-notarize": "^0.2.1",
        "eslint": "^6.8.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "handlebars": "^4.7.3",
        "less": "^3.11.1",
        "mini-css-extract-plugin": "^0.9.0",
        "mocha": "^7.1.0",
        "reveal.js": "^3.9.2",
        "string-extract-class-names": "^5.9.16",
        "uglify-js": "^3.8.0",
        "vue-loader": "^15.9.0",
        "vue-template-compiler": "^2.6.11",
        "vue-virtual-scroller": "^1.0.0-rc.2",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.11"
    }
}
