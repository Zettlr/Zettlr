    "vuex": "^4.0.2",
    "yaml": "^2.1.3"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "resolutions": {
    "@codemirror/lang-markdown/@codemirror/language": "^6.3.2",
    "@codemirror/autocomplete/@codemirror/view": "^6.7.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0",
    "@electron-forge/maker-zip": "^6.0.0",
    "@electron-forge/plugin-webpack": "^6.0.0",
    "@electron/notarize": "^1.2.3",
    "@types/adm-zip": "^0.5.0",
    "@types/archiver": "^5.3.1",
    "@types/command-exists": "^1.2.0",
    "@types/d3": "^7.4.0",
    "@types/gettext-parser": "^4.0.1",
    "@types/katex": "^0.16.0",
    "@types/lodash": "^4.14.187",
    "@types/luxon": "^3.0.2",
    "@types/md5": "^2.3.2",
    "@types/mermaid": "^9.1.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/rimraf": "^3.0.2",
    "@types/sanitize-html": "^2.6.2",
    "@types/semver": "^7.3.13",
    "@types/showdown": "^2.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "csso": "^5.0.5",
    "electron": "22.x.x",
    "electron-builder": "^23.0.3",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.26.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "26.x.x",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.7.0",
    "eslint-webpack-plugin": "^3.2.0",
    "fork-ts-checker-webpack-plugin": "^7.0.0",
    "jsdom": "^20.0.2",
    "less": "^4.1.2",
    "less-loader": "^11.1.0",
    "mocha": "^10.0.0",
    "node-loader": "^2.0.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.6.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "4.9.x",
    "vue-loader": "^17.0.1",
    "webpack": "^5.72.0"
  }
}
