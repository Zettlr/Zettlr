{
  "name": "zettlr",
  "homepage": "https://www.zettlr.com",
  "author": {
    "name": "Hendrik Erz",
    "email": "info@zettlr.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Zettlr/Zettlr.git"
  },
  "version": "1.8.4",
  "license": "GPL-3.0",
  "description": "A powerful Markdown editor for researchers.",
  "main": ".webpack/main",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "package:mac-x64": "electron-forge package --platform=darwin --arch=x64",
    "package:mac-arm": "electron-forge package --platform=darwin --arch=arm64",
    "package:win": "electron-forge package --platform=win32 --arch=x64",
    "package:win-arm": "electron-forge package --platform=win32 --arch=arm64",
    "package:linux-x32": "electron-forge package --platform=linux --arch=ia32",
    "package:linux-x64": "electron-forge package --platform=linux --arch=x64",
    "release:mac-x64": "yarn package:mac-x64 && electron-builder --mac --publish \"never\" --prepackaged out/Zettlr-darwin-x64/Zettlr.app",
    "release:mac-arm": "yarn package:mac-arm && electron-builder --mac --publish \"never\" --prepackaged out/Zettlr-darwin-arm64/Zettlr.app",
    "release:win": "yarn package:win && electron-builder --win --x64 --publish \"never\" --prepackaged out/Zettlr-win32-x64",
    "release:win-arm": "yarn package:win-arm && electron-builder --win --ia32 --arm64 --publish \"never\" --prepackaged out/Zettlr-win32-arm64",
    "release:linux-x32": "yarn package:linux-x32 && electron-builder --linux AppImage --ia32 --publish \"never\" --prepackaged out/Zettlr-linux-ia32",
    "release:linux-x64": "yarn package:linux-x64 && electron-builder --linux AppImage deb rpm zip --x64 --publish \"never\" --prepackaged out/Zettlr-linux-x64",
    "release:linux": "yarn release:linux-x32 && yarn release:linux-x64",
    "lang:refresh": "node scripts/refresh-language.js",
    "csl:refresh": "node scripts/update-csl.js",
    "reveal:build": "node scripts/update-reveal.js",
    "test": "mocha",
    "test-gui": "node scripts/test-gui/index.js",
    "lint": "eslint --ext js,vue,ts source"
  },
  "config": {
    "forge": "./forge.config.js"
  },
  "build": {
    "appId": "com.zettlr.app",
    "productName": "Zettlr",
    "npmRebuild": false,
    "copyright": "Zettlr is licensed under GNU GPL v3.",
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown",
        "description": "Markdown document",
        "mimeType": "text/markdown",
        "role": "Editor",
        "isPackage": false
      },
      {
        "ext": "markdown",
        "name": "Markdown",
        "description": "Markdown document",
        "mimeType": "text/markdown",
        "role": "Editor",
        "isPackage": false
      }
    ],
    "directories": {
      "output": "release"
    },
    "afterPack": "./scripts/afterPack.js",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "artifactName": "Zettlr-${version}-${arch}.${ext}",
      "icon": "resources/icons/icon.icns",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./scripts/assets/entitlements.plist",
      "entitlementsInherit": "./scripts/assets/entitlements.plist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "Zettlr-${version}-${arch}.${ext}",
      "icon": "resources/icons/ico/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip"
      ],
      "artifactName": "Zettlr-${version}-${arch}.${ext}",
      "executableName": "Zettlr",
      "synopsis": "Markdown editor",
      "category": "Office",
      "icon": "resources/icons/png",
      "desktop": {
        "StartupWMClass": "zettlr"
      }
    },
    "dmg": {
      "background": "resources/icons/dmg/dmg_back.tiff",
      "icon": "resources/icons/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Uninstall ${productName}",
      "installerHeader": "resources/NSIS/NSISinstallerHeader.bmp",
      "installerSidebar": "resources/NSIS/NSISinstallerSidebar.bmp"
    },
    "deb": {
      "priority": "optional",
      "compression": "xz"
    },
    "rpm": {
      "compression": "xz"
    }
  },
  "dependencies": {
    "@clr/icons": "^4.0.8",
    "@types/semver": "^7.3.4",
    "@zettlr/citr": "1.2.1",
    "adm-zip": "^0.5.1",
    "archiver": "^5.1.0",
    "astrocite": "^0.16.4",
    "bcp-47": "^1.0.8",
    "chalk": "^4.1.0",
    "chart.js": "^2.9.4",
    "chokidar": "^3.4.3",
    "citeproc": "^2.4.52",
    "codemirror": "^5.59.0",
    "command-exists": "^1.2.9",
    "got": "^11.8.1",
    "joplin-turndown": "^4.0.30",
    "joplin-turndown-plugin-gfm": "^1.0.12",
    "jquery": "^3.5.1",
    "jquery-ui": "^1.12.1",
    "katex": "^0.12.0",
    "md5": "^2.3.0",
    "mermaid": "^8.8.4",
    "moment": "^2.29.1",
    "nspell": "^2.1.4",
    "rimraf": "^3.0.2",
    "sanitize-filename": "^1.6.3",
    "semver": "^7.3.4",
    "showdown": "^1.9.1",
    "tippy.js": "^6.2.7",
    "uuid": "^8.3.2",
    "vue": "^2.6.12",
    "vue-virtual-scroller": "^1.0.10",
    "vuex": "^3.6.0",
    "yaml": "^1.10.0"
  },
  "optionalDependencies": {
    "fsevents": "^2.2.1"
  },
  "resolutions": {
    "**/electron-packager": "15.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.53",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.54",
    "@teamsupercell/typings-for-css-modules-loader": "^2.4.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "@zeit/webpack-asset-relocator-loader": "^0.8.0",
    "copy-webpack-plugin": "^6.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "csso": "^4.2.0",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "electron-notarize": "^1.0.0",
    "eslint": "^7.16.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jquery": "^1.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.3.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.0.8",
    "handlebars": "^4.7.6",
    "handlebars-loader": "^1.7.1",
    "jsdom": "^16.4.0",
    "less": "^3.13.1",
    "less-loader": "^7.2.1",
    "lorem-ipsum": "^2.0.3",
    "mocha": "^8.2.1",
    "node-loader": "^1.0.2",
    "raw-loader": "^4.0.2",
    "reveal.js": "^4.1.0",
    "style-loader": "^2.0.0",
    "svg-inline-loader": "^0.8.2",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3",
    "typings-for-css-modules-loader": "^1.7.0",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12"
  }
}
