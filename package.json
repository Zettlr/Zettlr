{
  "name": "zettlr",
  "homepage": "https://www.zettlr.com",
  "author": {
    "name": "Hendrik Erz",
    "email": "zettlr@mailbox.org"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Zettlr/Zettlr.git"
  },
  "version": "1.7.1",
  "license": "GPL-3.0",
  "description": "A powerful Markdown editor for researchers.",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "release:this": "electron-forge publish",
    "release:mac": "electron-builder --mac --publish \"never\"",
    "release:win": "electron-builder --win --publish \"never\"",
    "release:linux": "electron-builder --linux --publish \"never\"",
    "less": "gulp less",
    "handlebars": "gulp handlebars",
    "lang:refresh": "node scripts/refresh-language.js",
    "csl:refresh": "node scripts/update-csl.js",
    "reveal:build": "node scripts/update-reveal.js",
    "wp:dev": "cross-env NODE_ENV=development webpack --progress --colors",
    "wp:prod": "cross-env NODE_ENV=production webpack --progress --colors",
    "watch:gulp": "gulp watch",
    "watch:wp": "cross-env NODE_ENV=development webpack --progress --colors --watch",
    "watch": "npm-run-all --parallel watch:*",
    "test": "mocha",
    "test-gui": "node scripts/test-gui.js",
    "lint": "eslint --ext js,vue,ts -f html -o eslint_report.htm source resources"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "zettlr"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./source/renderer/assets/index.htm",
                  "js": "./source/renderer/renderer.ts",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "build": {
    "appId": "com.zettlr.app",
    "productName": "Zettlr",
    "npmRebuild": false,
    "copyright": "Zettlr is licensed under GNU GPL v3.",
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown",
        "description": "Markdown document",
        "mimeType": "text/markdown",
        "role": "Editor",
        "isPackage": false
      },
      {
        "ext": "markdown",
        "name": "Markdown",
        "description": "Markdown document",
        "mimeType": "text/markdown",
        "role": "Editor",
        "isPackage": false
      }
    ],
    "directories": {
      "output": "release",
      "app": "source"
    },
    "afterPack": "./scripts/afterPack.js",
    "afterSign": "./scripts/afterSign.js",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "artifactName": "Zettlr-${version}-${arch}.${ext}",
      "icon": "resources/icons/icns/icon.icns",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./scripts/assets/entitlements.plist",
      "entitlementsInherit": "./scripts/assets/entitlements.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "Zettlr-${version}-${arch}.${ext}",
      "icon": "resources/icons/ico/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        "deb",
        "rpm"
      ],
      "artifactName": "Zettlr-${version}-${arch}.${ext}",
      "synopsis": "Markdown editor",
      "category": "Office",
      "icon": "resources/icons/png",
      "desktop": {
        "StartupWMClass": "zettlr"
      }
    },
    "dmg": {
      "background": "resources/icons/dmg/dmg_back.tiff",
      "icon": "resources/icons/icns/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Uninstall ${productName}",
      "installerHeader": "resources/NSIS/NSISinstallerHeader.bmp",
      "installerSidebar": "resources/NSISinstallerSidebar.bmp"
    },
    "deb": {
      "priority": "optional",
      "compression": "xz"
    },
    "rpm": {
      "compression": "xz"
    }
  },
  "resolutions": {
    "joplin-turndown/jsdom/acorn-globals/acorn": "^6.4.1"
  },
  "dependencies": {
    "@zettlr/citr": "^1.2.0",
    "adm-zip": "^0.4.16",
    "archiver": "^4.0.1",
    "astrocite": "^0.16.3",
    "bcp-47": "^1.0.7",
    "chart.js": "^2.9.3",
    "chokidar": "^3.4.0",
    "citeproc": "^2.4.6",
    "codemirror": "^5.55.0",
    "command-exists": "^1.2.9",
    "electron-squirrel-startup": "^1.0.0",
    "got": "^11.4.0",
    "joplin-turndown": "^4.0.28",
    "joplin-turndown-plugin-gfm": "^1.0.12",
    "jquery": "^3.5.1",
    "jquery-ui": "^1.12.1",
    "katex": "^0.11.1",
    "md5": "^2.2.1",
    "mermaid": "8.5.0",
    "moment": "^2.27.0",
    "nspell": "^2.1.1",
    "on-change": "^2.0.1",
    "rimraf": "^3.0.2",
    "sanitize-filename": "^1.6.3",
    "semver": "^7.3.2",
    "showdown": "^1.9.1",
    "tippy.js": "^6.2.4",
    "uuid": "^8.2.0",
    "v8-compile-cache": "^2.1.1",
    "vue": "^2.6.11",
    "vuex": "^3.5.1",
    "yaml": "^1.10.0"
  },
  "optionalDependencies": {
    "fsevents": "^1.2.4"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.52",
    "@electron-forge/maker-deb": "6.0.0-beta.52",
    "@electron-forge/maker-rpm": "6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "6.0.0-beta.52",
    "@electron-forge/maker-zip": "6.0.0-beta.52",
    "@electron-forge/plugin-webpack": "6.0.0-beta.52",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "csso": "^4.0.3",
    "electron": "^9.0.5",
    "electron-devtools-installer": "^3.1.0",
    "electron-notarize": "^1.0.0",
    "eslint": "^7.4.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^7.0.0-alpha.9",
    "file-loader": "^6.0.0",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-handlebars": "^5.0.2",
    "gulp-less": "^4.0.1",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-wrap": "^0.15.0",
    "handlebars": "^4.7.6",
    "handlebars-loader": "^1.7.1",
    "less-loader": "^6.2.0",
    "lorem-ipsum": "^2.0.3",
    "mocha": "^8.0.1",
    "node-loader": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "reveal.js": "^3.9.2",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.0",
    "uglify-js": "^3.10.0",
    "vue-loader": "^15.9.3",
    "vue-template-compiler": "^2.6.11",
    "vue-virtual-scroller": "^1.0.10",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
