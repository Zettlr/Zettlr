{
    "filetypes": [
        ".md",
        ".rmd",
        ".markdown",
        ".txt",
        ".tex",
        ".mdx"
    ],
    "ignoreDirs": [
        "^\\.",
        "^\\.git",
        ".+?\\.app",
        ".+?\\.textbundle"
    ],
    "import_files": [
        [ "markdown",   "Markdown",                          "md", "markdown", "rmd", "mdx" ],
        [ "txt",        "Text",                              "txt" ],
        [ "docbook",    "DocBook",                           "docbook" ],
        [ "docx",       "Microsoft Word",                    "docx", "doc" ],
        [ "epub",       "EPUB",                              "epub" ],
        [ "haddock",    "Haddock",                           "haddock" ],
        [ "html",       "Hypertext Markup Language",         "html", "htm" ],
        [ "latex",      "LaTeX",                             "tex", "latex" ],
        [ "muse",       "Muse",                              "muse" ],
        [ "odt",        "Open Document Text",                "odt" ],
        [ "opml",       "Outline Processor Markup Language", "opml" ],
        [ "org",        "Emacs .org file",                   "org" ],
        [ "rst",        "reStructured Text",                 "rst" ],
        [ "t2t",        "txt2tags",                          "t2t" ],
        [ "textbundle", "TextBundle",                        "textbundle" ],
        [ "textile",    "Textile",                           "textile" ],
        [ "textpack",   "TextPack (Compressed TextBundle)",  "textpack" ],
        [ "vimwiki",    "VimWiki",                           "wiki" ]
    ]
